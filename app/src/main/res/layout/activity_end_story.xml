<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.frazzle.appforasc.EndStoryActivity"
    android:id="@+id/endAct">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/lastLine"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#fff"/>


    <Button
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:onClick="endStory"
        android:id="@+id/homeButton"
        android:text="Back to Home"
        android:textSize="30dp"
        style="@style/ButtonStyle"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/star"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/star"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:src="@drawable/ava1"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:id="@+id/ava1"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:src="@drawable/ava2"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:id="@+id/ava2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="CONGRATULATIONS\nYou finished the story!"
        android:textSize="60dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        android:id="@+id/congrats"/>



</RelativeLayout>
