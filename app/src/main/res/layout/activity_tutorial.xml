<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.frazzle.appforasc.TutorialActivity"
    android:background="@color/BackgroundBlue"
    android:id="@+id/tutorialAct">

    <Button
        style="@style/BackButton"
        android:id="@+id/closeButton"
        android:onClick="closeWindow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/TutorialTitle"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:textSize="60sp"
        android:textColor="#FFF" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/displayDB"
        android:textSize="15sp"
        android:textColor="#fff"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageVieww"
        android:layout_below="@+id/displayDB"
        android:layout_centerHorizontal="true"
        android:src="@drawable/giphy" />
</RelativeLayout>
