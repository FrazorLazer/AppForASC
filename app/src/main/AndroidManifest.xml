<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.frazzle.appforasc">

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".ExtendedApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeActivity"
            android:theme="@style/AppTheme.BlueTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseStory"
            android:theme="@style/AppTheme.BlueTheme"/>
        <activity
            android:name=".CharactersActivity"
            android:theme="@style/AppTheme.BlueTheme"/>
        <activity
            android:name=".SettingsActivity"
            android:theme="@style/AppTheme.BlueTheme"/>
        <activity
            android:name=".TutorialActivity"
            android:theme="@style/AppTheme.BlueTheme"/>
        <activity
            android:name=".CharacterCreate"
            android:theme="@style/AppTheme.BlueTheme" />
        <activity
            android:name=".CharacterChoiceOne"
            android:theme="@style/AppTheme.BlueTheme"/>
        <activity
            android:name=".CharacterChoiceTwo"
            android:theme="@style/AppTheme.BlueTheme"/>
        <activity
            android:name=".StoryActivity"
            android:theme="@style/AppTheme.BlueTheme"/>
        <activity android:name=".SwipeTest" />
        <activity
            android:name=".BeginStory"
            android:theme="@style/AppTheme.BlueTheme"/>
        <activity
            android:name=".CongratulationsActivity"
            android:theme="@style/AppTheme.BlueTheme"/>
        <activity
            android:name=".EndStoryActivity"
            android:theme="@style/AppTheme.BlueTheme"/>
    </application>
    <!--android:theme="@style/Theme.AppCompat.Light.NoActionBar"> -->
</manifest>
